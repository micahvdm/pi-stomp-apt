#!/usr/bin/make -f
# You must remove unused comment lines for the released package.
export DH_VERBOSE=1


%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_install:
	PYBUILD_INSTALL_ARGS="--prefix=/usr/local" pybuild --install
	mv debian/tmp/* debian/browsepy/
	mv debian/browsepy/local/ debian/browsepy/usr/
	mkdir -p debian/browsepy/usr/local/lib/
	mv debian/browsepy/lib/python3.11/ debian/browsepy/usr/local/lib/

override_dh_python3:
	dh_python3 --no-ext-rename -O--buildsystem=pybuild

override_dh_auto_test:

override_dh_usrlocal:

override_dh_installsystemd:
	dh_installsystemd  --name=browsepy --restart-after-upgrade